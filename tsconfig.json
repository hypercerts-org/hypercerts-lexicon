{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": ".",
    "allowImportingTsExtensions": false,
    "paths": {
      "../../../pub/leaflet/pages/*": [
        "./node_modules/@atcute/leaflet/lib/lexicons/types/pub/leaflet/pages/*"
      ]
    }
  },
  "include": ["generated/**/*", "lexicons/**/*.json"],
  "exclude": ["node_modules", "dist", "generated/index.ts"]
}
