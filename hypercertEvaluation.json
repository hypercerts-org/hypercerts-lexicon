{
  "lexicon": 1,
  "id": "app.certified.hypercert.evaluation",
  "defs": {
    "main": {
      "type": "record",
      "description": "An evaluation of a hypercert or other claim",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["subject", "evaluators", "summary", "createdAt"],
        "properties": {
          "subject": {
            "type": "ref",
            "ref": "app.certified.hypercert.record",
            "description": "Reference to what is being evaluated (hypercert, measurement, etc.)"
          },
          "evaluators": {
            "type": "array",
            "description": "DIDs of the evaluators",
            "items": {
              "type": "string",
              "format": "did"
            },
            "maxLength": 100
          },
          "evaluation": {
            "type": "string",
            "format": "uri",
            "description": "URI to detailed evaluation report or methodology"
          },
          "summary": {
            "type": "string",
            "description": "Brief evaluation summary",
            "maxLength": 5000,
            "maxGraphemes": 1000
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "Client-declared timestamp when this record was originally created"
          }
        }
      }
    }
  }
}