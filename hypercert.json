{
  "lexicon": 1,
  "id": "app.certified.hypercert.record",
  "defs": {
    "main": {
      "type": "record",
      "description": "A hypercert record tracking impact work.",
      "key": "any",
      "record": {
        "type": "object",
        "required": ["hypercertID", "description", "workScope", "workTimeframeFrom", "workTimeFrameTo"],
        "properties": {
          "hypercertID": {
            "type": "string",
            "description": "Identifier for the impact claim",
            "maxLength": 256
          },
          "description": {
            "type": "string",
            "format": "uri",
            "description": "A description of the impact work done.",
            "maxLength": 30000,
            "maxGraphemes": 3000
          },
          "imageURI": {
            "type": "string",
            "format": "uri",
            "description": "URI reference to hypercert image/visual representation"
          },
          "workScope": {
            "type": "string",
            "description": "Scope of the work performed",
            "maxLength": 5000,
            "maxGraphemes": 1000
          },
          "workTimeframeFrom": {
            "type": "string",
            "format": "datetime",
            "description": "When the work began"
          },
          "workTimeFrameTo": {
            "type": "string",
            "format": "datetime",
            "description": "When the work ended"
          },
          "URIs": {
            "type": "array",
            "description": "Supporting evidence, documentation, or external data URIs",
            "items": {
              "type": "string",
              "format": "uri"
            },
            "maxLength": 50
          },
          "contributorDIDs": {
            "type": "array",
            "description": "DIDs identifying contributors",
            "items": {
              "type": "string",
              "format": "did"
            },
            "maxLength": 100
          },
          "rightsURI": {
            "type": "string",
            "format": "uri",
            "description": "URI specifying rights and licensing"
          },
          "locationURI": {
            "type": "string",
            "format": "uri",
            "description": "Geographic location URI"
          }
        }
      }
    }
  }
}